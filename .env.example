# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# JWT Secret
JWT_SECRET=your-jwt-secret-key-here

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
AWS_BUCKET_NAME=your-bucket-name

# Google OAuth (for user authentication)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:5000/api/auth/github/callback

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FB_APP_ID=your-fb-app-id
FB_APP_SECRET=your-fb-app-secret
FB_REDIRECT_URI=http://localhost:5000/api/auth/instagram/callback

# Gemini API (for text/script generation)
GEMINI_API_KEY=AIzaSy...

# Google Cloud Platform (for Veo video generation via Vertex AI)
# NOTE: Veo requires OAuth 2.0, NOT an API key
GCP_PROJECT_ID=your-gcp-project-id
GCP_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=./config/service-account-key.json

# Veo Model Type: 'standard' (high quality, slower) or 'fast' (faster, lower quality)
# Options: 'standard', 'fast', 'v2'
# Default: standard
VEO_MODEL_TYPE=standard

# Other API Keys
BYTEZ_API_KEY=your-bytez-api-key
ELEVENLABS_API_KEY=sk_...
YOUTUBE_API_KEY=AIzaSy...

# Server Configuration
PORT=5000
PORT1=5001
FRONTEND_URL=http://localhost:5173

# DEPRECATED - Remove these
# VEO3_API_KEY - Veo uses OAuth 2.0, not API keys
# GEMINI_API_KEY_VEO - Not needed
# STABILITY_API_KEY - Using Gemini Imagen instead
